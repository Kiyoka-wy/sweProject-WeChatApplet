<import src="../lib/head.wxml" />
<import src="../lib/foot.wxml" />

<view class="container">

  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">

      <view class="page-section">
        <view class="page-section-title">任务标题</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="title" placeholder="请输入任务标题" />
            </view>
          </view>
        </view>
      </view>

      <view class="page-section">
        <view class="page-section-title">任务内容</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="content" placeholder="请输入任务内容" />
            </view>
          </view>
        </view>
      </view>

      <view class="weui-cells__title">任务地点</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">当前选择</view>
          </view>
          <view class="weui-cell__bd">
            <picker name="placePicker"bindchange="bindCasPickerChange" value="{{dataIndex}}" range="{{dataArray}}">
                <view class="weui-input">{{dataArray[dataIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>
      
      <view class="section {{reply?'on':'off'}}">
        <input name="place" placeholder="请输入任务地点" type="text" value="{{place}}"/>
      </view>

      <view class="weui-cells__title">任务截止日期</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">当前选择</view>
          </view>
          <view class="weui-cell__bd">
            <picker name='startDate'mode="date" value="{{startDate}}" bindchange="bindStartDateChange">
               <view class="weui-input">{{startDate}}</view>
            </picker>
            <picker name='startTime'mode="time" value="{{startTime}}" bindchange="bindStartTimeChange">
               <view class="weui-input">{{startTime}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="weui-cells__title">任务执行期限</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">当前选择</view>
          </view>
          <view class="weui-cell__bd">
            <picker name='endDate'mode="date" value="{{endDate}}" bindchange="bindEndDateChange">
               <view class="weui-input">{{endDate}}</view>
            </picker>
            <picker name='endTime'mode="time" value="{{endTime}}" bindchange="bindEndTimeChange">
               <view class="weui-input">{{endTime}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="page-section page-section-gap">
        <view class="page-section-title">赏金</view>
        <slider value="{{money}}" name="money" show-value ></slider>
      </view>

      <view class="btn-area">
        <button type="primary" formType="submit">提交</button>
        <button formType="reset">重置</button>
      </view>

    </form>
  </view>

  <template is="foot" />
</view>
