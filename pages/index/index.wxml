<!--index.wxml-->
<view class='topTabSwiper'>
    <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>分类1</view>
    <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>分类2</view>
    <view class='tab  {{currentData == 2 ? "tabBorer" : ""}}'  data-current = "2" bindtap='checkCurrent'>分类3</view>
</view>

<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>

      <view class="section section-big">
			  <view class="title">当前任务</view>
        <view wx:for="{{tasks}}" wx:key="item">
          <navigator url="../details/details">
            <i-card title="{{item.title}}" extra="{{item.nickname}}" thumb="{{item.img}}">
              <view slot="content">{{item.content}}</view>
              <view slot="footer">{{item.time}}</view>
            </i-card>
          </navigator>
        </view>
		  </view>
      
  </swiper-item>
  <swiper-item><view class='swiper_con'>welcome come to 分类2</view></swiper-item>
  <swiper-item><view class='swiper_con'>welcome come to 分类3</view></swiper-item>  
</swiper>




<navigator url="../publish/publish">
  <image class="add_icon" src="../../images/add.png"></image>
</navigator>