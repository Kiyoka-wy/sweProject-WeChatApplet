.swiper_con{text-align: center; width: 100%; height: 100%; padding: 80rpx 0;}

.task{
  margin-bottom: 30rpx
}

.special .content {
	width: 100%;
	height: 181rpx;
}


.section-big {
	padding: 20rpx;
  padding-left: 0;
	padding-right: 0;
}
.section-big .title {
	position: relative;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 2;
	margin-bottom: 20rpx;
}
.section-big .title:before {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -180rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}
.section-big .title:after {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: 80rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}